<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey">

    <!-- App Logo at the Top Right -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="67dp"
        android:layout_height="59dp"
        android:layout_margin="8dp"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Container for Return Button and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <!-- Row for Return Button and Page Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Return Button on the Left -->
            <ImageButton
                android:id="@+id/btnReturnHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/return_home"
                android:src="@drawable/ic_return" />

            <!-- Page Title to the Right of the Return Button -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="בחר חנות"
                android:textColor="@color/black"
                android:layout_marginStart="200dp"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- RecyclerView to display list of stores -->

        <!-- Checkout Button -->
        <GridView
            android:id="@+id/gridViewStores"
            android:layout_width="match_parent"
            android:layout_height="505dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:scrollbars="vertical" />

        <Button
            android:id="@+id/btnProceedToCheckout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/button_background"
            android:text="סיים קניה"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="24sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
