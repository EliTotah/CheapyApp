<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="24dp">

    <!-- Product Image on the Right Side -->
    <ImageView
        android:id="@+id/productImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/product_image" />

    <!-- Product Name to the Left of Product Image -->
    <TextView
        android:id="@+id/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/productImage"
        android:layout_toStartOf="@id/productImage"
        android:layout_marginEnd="12dp"
        android:text="@string/product_name"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <!-- Horizontal Layout for Quantity and Price -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/productName"
        android:layout_marginTop="-21dp"
        android:layout_marginEnd="200dp"
        android:layout_toStartOf="@id/productImage"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Product Quantity -->
        <TextView
            android:id="@+id/productQuantity"
            android:layout_width="7dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- Product Price Next to Quantity -->
        <TextView
            android:id="@+id/productPrice"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:text="@string/product_price"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>
